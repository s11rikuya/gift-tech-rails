<!DOCTYPE html>
<html>
  <head>
    <title>GiftBook</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">

  </head>

  <body>
    <header>
    <div class="form-box">
      <div class="form-box-left">
        <%= link_to("/") do %>

        <img src="http://j-gift.org/common/images/logo.png" alt="">
        <% end %>
      </div>
      <div class="form-box-right">
        <% if @current_user %>
        <div class="new-user">
          <%= link_to(@current_user.name,"/users/#{@current_user.id}") %>

        </div>
        <div class="new-user">
          <%= link_to("Timeline","/posts/index") %>
        </div>
        <div class="new-user">
          <%= link_to("New","/posts/new") %>
        </div>
        <div class="new-user">
          <%= link_to("Users","/users/index") %>
        </div>
        <div class="new-user">
          <%= link_to("Project","/projects/index") %>
        </div>
        <div class="new-user">
          <%= link_to("logout","/users/logout", {method: "post"}) %>
        </div>
        <% else %>
        <div class="new-user">
          <%= link_to("Signin","/users/new") %>
        </div>
        <div class="new-user">
          <%= link_to("Login","/users/login") %>
        </div>
        <% end %>
      </div>
    </div>
  </header>
    <%= yield %>
  </body>
</html>
